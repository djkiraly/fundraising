# Database (Neon.Tech PostgreSQL)
DATABASE_URL=postgresql://username:password@host.neon.tech/database?sslmode=require

# NextAuth.js
NEXTAUTH_SECRET=your-nextauth-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Encryption key for storing secrets in database
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Must be 64 hex characters (32 bytes)
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# Stripe (fallback - can be managed via admin panel once configured)
# These are optional if you configure Stripe settings in the admin panel
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-signing-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Square Configuration (fallback - can be managed via admin panel)
# Get these from Square Developer Dashboard: https://developer.squareup.com/
NEXT_PUBLIC_SQUARE_APPLICATION_ID=sandbox-sq0idb-xxxxxxxxxxxxx
SQUARE_ACCESS_TOKEN=EAAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SQUARE_LOCATION_ID=Lxxxxxxxxxxxxxxxxx
SQUARE_WEBHOOK_SIGNATURE_KEY=your-webhook-signature-key
SQUARE_ENVIRONMENT=sandbox

# Payment Provider Configuration
# active: stripe, square, or both
# default: stripe or square (used when active is 'both')
PAYMENT_PROVIDER_ACTIVE=stripe
PAYMENT_PROVIDER_DEFAULT=stripe

# Gmail API Configuration (optional - can be managed via admin panel)
# Get these from Google Cloud Console: https://console.cloud.google.com/
# 1. Create a project and enable Gmail API
# 2. Configure OAuth consent screen
# 3. Create OAuth 2.0 credentials (Web application)
# 4. Add redirect URI: http://localhost:3000/api/admin/settings/gmail-callback
GMAIL_CLIENT_ID=xxx.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=xxx
GMAIL_REDIRECT_URI=http://localhost:3000/api/admin/settings/gmail-callback

# Seeding options
# Set to 'true' to migrate Stripe settings from .env to database during seeding
SEED_STRIPE_SETTINGS=false
